{{>footer}}
<div class="main">
    <div class="container" id="cont-index">
        <div class="row">
            <div class="col">
                <div class="container-fluid p-4">
                    <div class="row">
                        {{#each articulo}}
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-body">
                                    <div class="form-group">
                                        <div class="img">
                                            <img src="{{img}}" alt="{{nombre}}" height="150px" width=" 200px">
                                        </div>                                        
                                    </div>
                                    <div class="form-group">
                                        <center>
                                            <h2>{{nombre}}</h2>
                                        </center>
                                    </div>
                                    <div class="form-group">
                                         <center>
                                            <p>{{descripcion}}</p>
                                        </center>
                                    </div>
                                    <div class="form-group">
                                        <a href="/delete/{{id}}" class="btn btn-danger d-block">Eliminar</a>
                                        <a href="/editar/{{id}}" class="btn btn-twitter d-block">Editar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{else}}
                        <div class="col-md-5 mx-auto">
                            <div class="car card-body text-center">
                                <h3>Â¡No hay Cursos para mostrar!</h3>
                                <div class="logo">
                                    <img src="img/Image1.png" alt="no hay objetos para mostrar" width="230px" height="230px">
                                </div>
                                
                                <br>                                
                                <h3>Click en "Agregar"</h3>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>