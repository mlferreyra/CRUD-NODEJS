<div class="container">
    <form action="/editar/{{articulo.id}}" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="nombre" value="{{articulo.nombre}}" autofocus="autofocus"/>
        </div>
        <div class="form-group">
            <input type="url" class="form-control" name="img" value="{{articulo.img}}"/>
        </div>
        <div class="form-group">
            <textarea name="descripcion" class="form-control" rows="2" {{articulo.descripcion}}></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block"> GUARDAR </button>
        </div>
    </form>
</div>